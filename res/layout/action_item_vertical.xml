<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/action_item_btn"
        android:showDividers="beginning|none|end"
        android:divider="@android:color/holo_blue_dark" android:baselineAligned="false"
        >

    <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp" android:adjustViewBounds="true"
            android:scaleType="center"/>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="3dip"
            android:paddingRight="1dip"
            android:text="Chart"
            android:textColor="#5c5c5c"
            android:textSize="10sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:scrollHorizontally="false" android:ellipsize="none" android:layout_gravity="center_vertical"/>
    <TextView
            android:id="@+id/tv_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#055d7d"
            style="@android:style/TextAppearance.Holo.Widget.PopupMenu.Small"
            android:textStyle="bold|italic" android:singleLine="false" android:paddingLeft="1dp" android:text="1260"
            android:layout_gravity="center" android:gravity="center_vertical|right" android:paddingRight="2dp"/>
</LinearLayout>