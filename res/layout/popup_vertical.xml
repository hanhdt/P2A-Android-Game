<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <ScrollView
            android:id="@+id/scroller"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popover_background"
            android:fadingEdgeLength="2dip"
            android:scrollbars="none" android:fillViewport="false">

        <LinearLayout
                android:id="@+id/tracks"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="@android:color/holo_blue_dark"
                android:showDividers="beginning|none|middle|end" android:gravity="left"
                android:padding="2dp"/>

    </ScrollView>

    <ImageView
            android:id="@+id/arrow_up"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@drawable/up"
            android:layout_marginBottom="-1dp" android:layout_marginLeft="5dp"/>

    <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_below="@id/scroller"
            android:layout_marginTop="-1dip"
            android:src="@drawable/down"
            android:layout_marginLeft="5dip"
            />

</RelativeLayout>